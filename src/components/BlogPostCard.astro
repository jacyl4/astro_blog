---
// 博客文章卡片组件，展示标题、摘要、分类等
import type { ProcessedBlogPost } from '@/services/BlogService';
import { POST_READ_MORE_TEXT, URLS } from '@/consts';
import { Icon } from 'astro-icon/components';

interface Props {
  post: ProcessedBlogPost;
}

const { post } = Astro.props;
const postUrl = `${URLS.posts}/${post.slug}/`;
---

<article class="group relative flex flex-col bg-card p-6 rounded-2xl border border-border-primary transition-all duration-300 dark:hover:shadow-soft-lg hover:-translate-y-1">
  <a href={postUrl} class="absolute inset-0 z-10" aria-label={`阅读更多关于 ${post.data.title} 的文章`}></a>
  
  <div class="flex flex-col flex-grow">
    <header class="mb-4">
      <h2 class="font-bold text-xl text-text-primary transition-colors duration-300 group-hover:text-accent">{post.data.title}</h2>
    </header>
    
    <div class="flex-grow"></div>
  </div>
  
  <footer class="mt-auto">
    <a href={postUrl} class="relative z-20 text-link font-semibold inline-flex items-center gap-x-2 group/link">
      {POST_READ_MORE_TEXT}
      <Icon name="lucide:arrow-right" class="w-4 h-4 transition-transform duration-300 group-hover/link:translate-x-1" />
    </a>
  </footer>
</article>
