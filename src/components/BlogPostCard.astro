---
// 博客文章卡片组件，展示标题、摘要、分类等
import type { ProcessedBlogPost } from '@/services/BlogService';
import { URLS, UI_TEXT } from '@/consts';
import { formatDate } from '@/utils/dateUtils';
import { slugify } from '@/utils/stringUtils';

interface Props {
  post: ProcessedBlogPost;
}

const { post } = Astro.props;
const postUrl = `${URLS.posts}/${post.slug}/`;
const formattedDate = formatDate(post.data.created);
const category = post.data.category?.trim();
const categoryUrl = category ? `${URLS.categories}/${slugify(category)}/` : undefined;
---

<article class="group relative flex flex-col bg-card p-6 rounded-2xl border border-border-primary post-card">
  <a href={postUrl} class="absolute inset-0 z-10" aria-label={`阅读更多关于 ${post.data.title} 的文章`}></a>
  
  <div class="flex flex-col flex-grow">
    <header class="mb-4">
      <h2 class="font-bold text-xl text-text-primary transition-colors duration-300 group-hover:text-accent">{post.data.title}</h2>
    </header>
    <div class="post-meta space-y-2">
      <div class="post-meta-row">
        <span class="post-meta-label">{UI_TEXT.publishDate}:</span>
        <span class="post-meta-value" style="color: var(--meta-date-color);">{formattedDate}</span>
      </div>
      {categoryUrl && (
        <div class="post-meta-row">
          <span class="post-meta-label">{UI_TEXT.category}:</span>
          <a href={categoryUrl} class="post-meta-value relative z-20 category-link" style="color: var(--meta-category-color);">{category}</a>
        </div>
      )}
    </div>
  </div>
  
  <footer class="mt-auto"></footer>
</article>

<style>
  .post-card {
    box-shadow: var(--card-shadow);
    transition: transform 200ms ease, box-shadow 200ms ease, border-color 200ms ease;
    will-change: transform, box-shadow;
  }

  .post-card:hover,
  .post-card:focus-within {
    transform: translateY(-6px);
    box-shadow: var(--card-hover-shadow);
    border-color: var(--card-border-hover);
  }

  .post-card:focus-within {
    outline: none;
  }

  .post-card > a:focus-visible {
    outline: 2px solid var(--card-border-hover);
    outline-offset: 4px;
    border-radius: inherit;
  }

  @media (prefers-reduced-motion: reduce) {
    .post-card,
    .post-card:hover,
    .post-card:focus-within {
      transition: none;
      transform: none;
    }
  }
</style>
