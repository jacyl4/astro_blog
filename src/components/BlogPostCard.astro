---
// 博客文章卡片组件，展示标题、摘要、分类等
import type { BlogPost } from '@/services/BlogService';
import { POST_READ_MORE_TEXT, URLS } from '@/consts';

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
const postUrl = `${URLS.posts}/${post.slug}/`;
---

<article class="bg-card p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
  <a href={postUrl}>
    <h2 class="font-bold text-xl text-text-primary mb-2">{post.data.title}</h2>
  </a>
  {post.data.description && (
    <p class="text-text-primary mb-4">{post.data.description}</p>
  )}
  <a href={postUrl} class="text-link hover:underline font-semibold">
    {POST_READ_MORE_TEXT}
  </a>
</article>
