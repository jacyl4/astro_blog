---
import { getArchiveMonths } from '@/services/BlogService';
import { UI_TEXT, URLS } from '@/consts';

const uniqueMonths = await getArchiveMonths();
---

<div class="flex flex-col gap-2">
  <h2 class="text-xl font-bold">{UI_TEXT.archiveTitle}</h2>
  <div class="flex flex-col gap-1">
    {uniqueMonths.map(month => (
      <a
        href={`${URLS.archive}/${month}/`}
        class="block px-2 py-1 rounded-md hover:text-accent transition-colors"
      >
        {month}
      </a>
    ))}
  </div>
  {uniqueMonths.length === 0 && (
    <p class="text-gray-600">{UI_TEXT.noArchives}</p>
  )}
</div>
