---
// 全站主布局，包含头部导航、内容插槽
import '../styles/global.css';
import NavigationBar from '../components/NavigationBar.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '我的Astro博客' } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN" style="height: 100%;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Astro, 博客, 技术, 文章" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <title>{title}</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        height: 100%; /* Ensure body takes full viewport height for scrolling */
      }
      .parallax-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/clouds.webp'); /* 恢复为 clouds.webp */
        background-size: cover;
        background-position: center;
        z-index: -1; /* Place behind content */
      }
      .content-wrapper {
        position: relative;
        z-index: 1; /* Place above background */
        background-color: transparent; /* Ensure content is transparent to see background */
      }
      .header-placeholder {
        height: 450px; /* Maintain original header height */
        background-image: url('/head_car.webp'); /* 设置页头背景 */
        background-size: cover;
        background-position: center;
        background-color: transparent; /* Make header transparent */
      }
    </style>
  </head>
  <body>
    <div class="parallax-bg" id="parallax-bg"></div>
    <div class="content-wrapper">
      <div class="mx-auto my-[21px] max-w-[1152px] shadow-lg bg-white rounded-lg overflow-hidden">
        <!-- 页头 -->
        <div class="header-placeholder relative">
          <header>
          </header>
          <NavigationBar />
        </div>

        <!-- 正文和侧栏区域 -->
        <div class="flex">
          <!-- 正文 -->
          <main class="w-3/4 p-4">
            <slot />
          </main>
          <!-- 侧栏 -->
          <aside class="w-1/4 bg-green-500 p-4">
            <div class="h-full bg-yellow-300 flex items-center justify-center text-xl font-bold">
              侧栏内容占位
            </div>
          </aside>
        </div>

        <!-- 底栏 -->
        <footer class="h-[330px] bg-purple-200 p-4">
          <p>底栏内容</p>
        </footer>
      </div>
    </div>

    <script>
      // 移除视差滚动效果，确保背景图始终覆盖
    </script>
  </body>
</html>
