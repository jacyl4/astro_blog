---
// 全站主布局，包含头部导航、内容插槽
import NavigationBar from '@/components/NavigationBar.astro';
import CategoryList from '@/components/CategoryList.astro';
import TagList from '@/components/TagList.astro';
import { getArchiveMonths } from '@/services/BlogService';
import cloudsImage from '../assets/images/clouds.webp';
import headCarImage from '../assets/images/head_car.webp';
import '../styles/global.css';
import '../styles/shiki.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '我的Astro博客' } = Astro.props;

const uniqueMonths = await getArchiveMonths();
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Astro, 博客, 技术, 文章" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <title>{title}</title>
    <link rel="preload" as="image" href={cloudsImage.src}>
    <link rel="preload" as="image" href={headCarImage.src}>
    <style>
      @font-face {
        font-family: 'Geist Sans';
        src: url('https://cdn.jsdelivr.net/npm/@fontsource/geist-sans@latest/files/geist-sans-latin-400-normal.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: 'Geist Mono';
        src: url('https://cdn.jsdelivr.net/npm/@fontsource/geist-mono@latest/files/geist-mono-latin-400-normal.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }
      html {
        scroll-behavior: smooth;
      }
      body {
        margin: 0;
        padding: 0;
        min-height: 100vh; /* 恢复 */
      }
      .parallax-bg {
        position: fixed; /* 恢复 */
        top: 0;
        left: 0;
        width: 100%;
        height: 100%; /* 恢复 */
        background-image: var(--clouds-bg); /* 使用 CSS 变量 */
        background-size: cover;
        background-position: center;
        z-index: -1; /* Place behind content */
      }
      .content-wrapper {
        position: relative;
        z-index: 1; /* Place above background */
        background-color: transparent; /* Ensure content is transparent to see background */
      }
      .header-placeholder {
        height: 450px; /* Maintain original header height */
        background-image: var(--head-car-bg); /* 使用 CSS 变量 */
        background-size: cover;
        background-position: center;
        background-color: transparent; /* Make header transparent */
      }
      /* Swup animations */
      .swup-transition-fade {
        transition: 0.4s;
        opacity: 1;
      }
      html.is-animating .swup-transition-fade {
        opacity: 0;
      }
    </style>
  </head>
  <body class="font-sans" style={`--clouds-bg: url(${cloudsImage.src}); --head-car-bg: url(${headCarImage.src});`}>
    <div id="parallax-bg" class="parallax-bg"></div>
    <div class="content-wrapper">
      <div class="mx-auto my-[21px] max-w-[1152px] relative">
        <div id="header-container">
          <div class="header-placeholder relative">
            <header></header>
          </div>
          <NavigationBar />
        </div>

        <div id="main-content" class="shadow-lg overflow-hidden flex" style="background-color: var(--main-content-bg);">
          <main id="swup" class="swup-transition-fade w-3/4">
            <div class="p-8">
              <slot />
            </div>
          </main>

          <aside id="sidebar" class="w-1/4 p-4 pt-24 space-y-8 border-l border-[var(--divider-shadow-light)]">
            <CategoryList />
            <TagList />
            <div>
              <h2 class="text-xl font-bold mb-4">归档</h2>
              <ul class="pl-0">
                {uniqueMonths.map(month => (
                  <li class="mb-2">
                    <a href={`/archive/${month}/`} class="hover:underline">{month}</a>
                  </li>
                ))}
              </ul>
            </div>
          </aside>
        </div>

        <footer id="footer" class="h-[39px] p-4 flex items-center justify-end" style="background-color: var(--footer-bg); box-shadow: var(--footer-shadow); border-top: 1px solid var(--divider-shadow-dark);">
          <p class="text-sm">
            <a href="https://astro.build/" target="_blank" rel="noopener noreferrer" class="font-light text-transparent [text-shadow:-0.5px_-0.5px_0.5px_var(--text-shadow-dark),0.5px_0.5px_0.5px_var(--text-shadow-light)]">目前样式巨丑，努力施工中。Self-designed, Astro-driven.</a>
          </p>
        </footer>
        
        <img id="avatar" src="/avatar.webp" alt="Avatar" class="absolute top-[450px] left-3/4 -translate-x-1/2 -translate-y-1/2 w-24 h-24 rounded-full border-4 border-white shadow-lg z-10">
      </div>
    </div>
  </body>
</html>
