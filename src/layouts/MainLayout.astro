---
// 全站主布局，包含头部导航、内容插槽
import '../styles/global.css';
import NavigationBar from '../components/NavigationBar.astro';
import { getCollection } from 'astro:content';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '我的Astro博客' } = Astro.props;

const allPosts = await getCollection('blog');

const uniqueMonths = [...new Set(allPosts.map(post => {
  const date = new Date(post.data.pubDate);
  return `${date.getFullYear()}-${(date.getMonth() + 1).toString().padStart(2, '0')}`;
}))].sort().reverse();
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Astro, 博客, 技术, 文章" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <title>{title}</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        min-height: 100vh; /* 恢复 */
      }
      .parallax-bg {
        position: fixed; /* 恢复 */
        top: 0;
        left: 0;
        width: 100%;
        height: 100%; /* 恢复 */
        background-image: url('/clouds.webp'); /* 恢复为 clouds.webp */
        background-size: cover;
        background-position: center;
        z-index: -1; /* Place behind content */
      }
      .content-wrapper {
        position: relative;
        z-index: 1; /* Place above background */
        background-color: transparent; /* Ensure content is transparent to see background */
      }
      .header-placeholder {
        height: 450px; /* Maintain original header height */
        background-image: url('/head_car.webp'); /* 设置页头背景 */
        background-size: cover;
        background-position: center;
        background-color: transparent; /* Make header transparent */
      }
    </style>
  </head>
  <body>
    <div class="parallax-bg" id="parallax-bg"></div>
    <div class="content-wrapper">
      <div class="mx-auto my-[21px] max-w-[1152px] shadow-lg bg-white rounded-lg overflow-hidden">
        <!-- 页头 -->
        <div class="header-placeholder relative">
          <header>
          </header>
          <NavigationBar />
        </div>

        <!-- 正文和侧栏区域 -->
        <div class="flex">
          <!-- 正文 -->
          <main class="w-3/4 p-4 border-r border-gray-300">
            <slot />
          </main>
          <!-- 侧栏 -->
          <aside class="w-1/4 p-4">
            <h2 class="text-xl font-bold mb-4">Archives</h2>
            <ul>
              {uniqueMonths.map(month => (
                <li class="mb-2">
                  <a href={`/archive/${month}/`} class="text-gray-600 hover:underline">{month}</a>
                </li>
              ))}
            </ul>
          </aside>
        </div>

        <!-- 底栏 -->
        <footer class="h-[39px] bg-[#F5F5F7] p-4 flex items-center justify-end">
          <p class="text-gray-600 text-sm">
            <a href="https://astro.build/" target="_blank" rel="noopener noreferrer">Powered by Astro</a>
          </p>
        </footer>
      </div>
    </div>

    <script>
      // 移除视差滚动效果，确保背景图始终覆盖
    </script>
  </body>
</html>
