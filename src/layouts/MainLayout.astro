---
// 全站主布局，包含头部导航、内容插槽
import { ViewTransitions } from 'astro:transitions';
import '../styles/base.css';
import '../styles/shiki.css';
import NavigationBar from '@/components/NavigationBar.astro';
import ThemeSwitcher from '@/components/ThemeSwitcher.astro';
import CategoryList from '@/components/CategoryList.astro';
import TagList from '@/components/TagList.astro';
import { getArchiveMonths } from '@/services/BlogService';
import cloudsImage from '../assets/images/clouds.webp';
import headCarImage from '../assets/images/head_car.webp';

interface Props {
  title: string;
  description?: string;
  showSidebar?: boolean; // 新增属性
}

const { title, description = '我的Astro博客', showSidebar = true } = Astro.props;

const uniqueMonths = await getArchiveMonths();
---

<!DOCTYPE html>
<html lang="zh-CN" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Astro, 博客, 技术, 文章" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <title>{title}</title>
    <ViewTransitions />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.3.0/dist/fonts/geist-sans/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.3.0/dist/fonts/geist-mono/style.css" />
    <link rel="preload" as="image" href={cloudsImage.src}>
    <link rel="preload" as="image" href={headCarImage.src}>
    <style>
      html {
        scroll-behavior: smooth;
      }
      body {
        margin: 0;
        padding: 0;
        min-height: 100vh; /* 恢复 */
      }
      .parallax-bg {
        position: fixed; /* 恢复 */
        top: 0;
        left: 0;
        width: 100%;
        height: 100%; /* 恢复 */
        background-image: var(--clouds-bg); /* 使用 CSS 变量 */
        background-size: cover;
        background-position: center;
        z-index: -1; /* Place behind content */
      }
      .content-wrapper {
        position: relative;
        z-index: 1; /* Place above background */
        background-color: transparent; /* Ensure content is transparent to see background */
      }
      .header-placeholder {
        height: 450px; /* Maintain original header height */
        background-image: var(--head-car-bg); /* 使用 CSS 变量 */
        background-size: cover;
        background-position: center;
        background-color: transparent; /* Make header transparent */
      }

      ::view-transition-old(main-content) {
        animation: fade-and-slide-out 0.5s ease-in-out forwards;
      }
      ::view-transition-new(main-content) {
        animation: fade-and-slide-in 0.5s ease-in-out forwards;
      }

      @keyframes fade-and-slide-in {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @keyframes fade-and-slide-out {
        from {
          opacity: 1;
          transform: translateY(0);
        }
        to {
          opacity: 0;
          transform: translateY(-20px);
        }
      }
    </style>
  </head>
  <body class="font-sans" style={`--clouds-bg: url(${cloudsImage.src}); --head-car-bg: url(${headCarImage.src});`}>
    <div class="parallax-bg" id="parallax-bg"></div>
    <div class="content-wrapper">
    <div class="mx-auto my-[21px] max-w-[1152px] relative">
      <div id="main-content" transition:name="main-content" class="shadow-lg rounded-lg overflow-hidden" style="background-color: var(--main-content-bg);">
        <!-- 页头 -->
        <div class="header-placeholder relative">
          <header>
          </header>
        </div>

        <NavigationBar />

        <!-- 正文和侧栏区域 -->
        <div class="flex">
          <!-- 正文 -->
          <main class={showSidebar ? "w-3/4 p-8 border-r border-[var(--divider-shadow-dark)]" : "w-full p-8"}>
            <slot />
          </main>
          <!-- 侧栏 -->
          {showSidebar && (
            <aside class="w-1/4 p-8 pt-24 space-y-8 border-l border-[var(--divider-shadow-light)]"> {/* 添加 space-y-8 增加组件间距 */}
              <CategoryList /> {/* 添加 CategoryList 组件 */}
              <TagList /> {/* 添加 TagList 组件 */}
              <h2 class="text-xl font-bold mb-4">Archives</h2>
              <ul>
                {uniqueMonths.map(month => (
                  <li class="mb-2">
                    <a href={`/archive/${month}/`} class="text-gray-600 hover:underline">{month}</a>
                  </li>
                ))}
              </ul>
            </aside>
          )}
        </div>

        <!-- 底栏 -->
        <footer class="h-[39px] p-4 flex items-center justify-end" style="background-color: var(--footer-bg); box-shadow: var(--footer-shadow); border-top: 1px solid var(--divider-shadow-dark);">
          <p class="text-sm">
            <a href="https://astro.build/" target="_blank" rel="noopener noreferrer" class="font-light text-transparent [text-shadow:-0.5px_-0.5px_0.5px_var(--text-shadow-dark),0.5px_0.5px_0.5px_var(--text-shadow-light)]">Powered by Astro</a>
          </p>
        </footer>
      </div>
      <img src="/avatar.webp" alt="Avatar" class="absolute top-[450px] left-3/4 -translate-x-1/2 -translate-y-1/2 w-24 h-24 rounded-full border-4 border-white shadow-lg z-10" transition:name="avatar">
    </div>

    <script>
      document.addEventListener('astro:after-swap', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    </script>
  </body>
</html>
